---
import { Code, Zap, Users, Cog } from '@lucide/astro';

const services = [
  {
    icon: Code,
    props: { class: 'w-12 h-12 text-pink-600' },
    title: 'Desarrollo de Software',
    description:
      'Aplicaciones web y móviles personalizadas que se adaptan perfectamente a tu negocio y procesos específicos.',
  },
  {
    icon: Zap,
    props: { class: 'w-12 h-12 text-yellow-500' },
    title: 'Automatización de Procesos',
    description:
      'Convertimos tus tareas repetitivas en sistemas automáticos que ahorran tiempo y reducen errores.',
  },
  {
    icon: Users,
    props: { class: 'w-12 h-12 text-teal-500' },
    title: 'Proyectos Individuales',
    description:
      'Soluciones únicas diseñadas específicamente para las necesidades particulares de tu empresa.',
  },
  {
    icon: Cog,
    props: { class: 'w-12 h-12 text-blue-600' },
    title: 'Integración de Sistemas',
    description:
      'Conectamos tus herramientas existentes para crear un ecosistema tecnológico eficiente.',
  },
];

const whatsappUrl = 'https://wa.me/543841453879?text=Hola,%20me%20interesa%20conocer%20m%C3%A1s%20sobre%20sus%20servicios';
---

<section id="servicios" class="py-20 bg-white snap-section">
  <!-- JSON-LD datos estructurados de servicios -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org",
      "@graph": services.map(s => ({
        "@type": "Service",
        "name": s.title,
        "description": s.description,
        "provider": {
          "@type": "Organization",
          "name": "Empulse",
          "url": "https://empulse.site"
        }
      }))
    })}
  </script>
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Nuestros <span class="text-pink-600">Servicios</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Ofrecemos soluciones tecnológicas integrales para impulsar tu negocio hacia el futuro digital
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      {services.map(({ icon: Icon, props, title, description }) => (
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
          <div class="mb-6">
            <Icon {...props} />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-4">{title}</h3>
          <p class="text-gray-600 leading-relaxed">{description}</p>
        </div>
      ))}
    </div>

    <div class="text-center">
      <a
        href={whatsappUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-pink-600 hover:bg-pink-700 text-white font-bold py-4 px-8 rounded-full text-lg transition-transform transform hover:scale-105 shadow-lg"
      >
        SOLICITAR COTIZACIÓN
      </a>
    </div>
  </div>
</section>

<script>

  import "../scripts/gsapScroll";

</script>