---  
import '../styles/global.css';
import Header from '../components/Header.astro';  
import Footer from '../components/Footer.astro';  
import WhatsAppButton from '../components/WhatsAppButton.astro';  
const { title = 'Empulse' } = Astro.props;  
---  

<html lang="es">  
  <head>  
    <meta charset="UTF-8" />
    <meta name="description" content="Empulse - Tu aliado en la gestión de proyectos y tareas." />
    <meta name="keywords" content="gestión de proyectos, tareas, productividad, organización" />
    <meta name="author" content="Empulse Team" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    <title>{title}</title>  
  </head>  
  <body class="bg-white text-gray-900">  
    <Header />  
    <main class="min-h-screen">  
      <slot />  
    </main>  
    <Footer />  
    <WhatsAppButton />  
  </body>  
</html>
